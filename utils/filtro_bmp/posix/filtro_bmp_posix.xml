<!--
Ejecutar con:
	globusrun-ws -submit -F https://gridimadrid.ciemat.es:8443/wsrf/services/ManagedJobFactoryService -S -f filtro_bmp_posix.xml
O simplemente:
	globusrun-ws -submit -F gridimadrid.ciemat.es -S -f filtro_bmp_posix.xml
-->
<job>
    <executable>bmp_est_posix</executable>
    <directory>${GLOBUS_USER_HOME}</directory>
    <argument>earth8k-BM-col-bmp-um.bmp</argument>
    <argument>earth8k-BM-col-bmp-um2.bmp</argument>
    <stdout>${GLOBUS_USER_HOME}/stdout</stdout>
    <stderr>${GLOBUS_USER_HOME}/stderr</stderr>
    <fileStageIn>
        <transfer>
            <sourceUrl>gsiftp://cormoran.arcos.inf.uc3m.es/grid/bmp_est_posix</sourceUrl>
            <destinationUrl>file:///${GLOBUS_USER_HOME}/bmp_est_posix</destinationUrl>
        </transfer>
        <transfer>
            <sourceUrl>gsiftp://cygnus.dacya.ucm.es/local/home/grid03/earth8k-BM-col-bmp-um.bmp</sourceUrl>
            <destinationUrl>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um.bmp</destinationUrl>
        </transfer>
        <rftOptions>
            <blockSize>65536</blockSize>
        </rftOptions>
    </fileStageIn>
    <fileStageOut>
        <transfer>
            <sourceUrl>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um2.bmp</sourceUrl>
            <destinationUrl>gsiftp://cygnus.dacya.ucm.es/local/home/grid03/earth8k-BM-col-bmp-um2.bmp</destinationUrl>
        </transfer>
        <rftOptions>
            <blockSize>65536</blockSize>
        </rftOptions>
    </fileStageOut>
    <fileCleanUp>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/bmp_est_posix</file>
        </deletion>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um.bmp</file>
        </deletion>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um2.bmp</file>
        </deletion>
    </fileCleanUp>
</job>
