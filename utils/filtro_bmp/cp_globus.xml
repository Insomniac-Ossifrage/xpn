<!--
Ejecutar con:
	globusrun-ws -submit -F https://gridimadrid.ciemat.es:8443/wsrf/services/ManagedJobFactoryService -S -f cp_globus.xml
O simplemente:
	globusrun-ws -submit -F gridimadrid.ciemat.es -S -f cp_globus.xml
-->
<job>
    <executable>xpncp</executable>
    <directory>${GLOBUS_USER_HOME}</directory>
    <argument>-S</argument>
    <argument>-b</argument>
    <argument>4</argument>
    <argument>earth8k-BM-col-bmp-um.bmp</argument>
    <argument>earth8k-BM-col-bmp-um2.bmp</argument>
    <environment>
        <name>LD_LIBRARY_PATH</name>
        <value>/usr/local/globus/lib</value>
    </environment>
    <stdout>${GLOBUS_USER_HOME}/stdout</stdout>
    <stderr>${GLOBUS_USER_HOME}/stderr</stderr>
    <fileStageIn>
        <transfer>
            <sourceUrl>gsiftp://cormoran.arcos.inf.uc3m.es/grid/xpncp</sourceUrl>
            <destinationUrl>file:///${GLOBUS_USER_HOME}/xpncp</destinationUrl>
        </transfer>
        <transfer>
            <sourceUrl>gsiftp://cygnus.dacya.ucm.es/local/home/grid03/earth8k-BM-col-bmp-um.bmp</sourceUrl>
            <destinationUrl>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um.bmp</destinationUrl>
        </transfer>
    </fileStageIn>
    <fileStageOut>
        <transfer>
            <sourceUrl>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um2.bmp</sourceUrl>
            <destinationUrl>gsiftp://cygnus.dacya.ucm.es/local/home/grid03/earth8k-BM-col-bmp-um2.bmp</destinationUrl>
        </transfer>
    </fileStageOut>
    <fileCleanUp>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/xpncp</file>
        </deletion>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um.bmp</file>
        </deletion>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/earth8k-BM-col-bmp-um2.bmp</file>
        </deletion>
    </fileCleanUp>
</job>
