<!--
Ejecutar con:
	globusrun-ws -submit -J -S -f filtro_bmp_expand_simple.xml
-->
<job>
    <executable>bmp_est_expand</executable>
    <directory>${GLOBUS_USER_HOME}</directory>
    <argument>/PNFS/1.xpn.bmp</argument>
    <argument>/PNFS/2.xpn.bmp</argument>
    <environment>
        <name>LD_LIBRARY_PATH</name>
        <value>/usr/local/globus/lib</value>
    </environment>
    <environment>
        <name>XPN_CONF</name>
        <value>${GLOBUS_USER_HOME}</value>
    </environment>
    <stdout>${GLOBUS_USER_HOME}/stdout</stdout>
    <stderr>${GLOBUS_USER_HOME}/stderr</stderr>
    <fileStageIn>
        <transfer>
            <sourceUrl>gsiftp://cormoran.arcos.inf.uc3m.es/grid/bmp_est_expand</sourceUrl>
            <destinationUrl>file:///${GLOBUS_USER_HOME}/bmp_est_expand</destinationUrl>
        </transfer>
        <transfer>
            <sourceUrl>gsiftp://cormoran.arcos.inf.uc3m.es/grid/conf/xpn.conf</sourceUrl>
            <destinationUrl>file:///${GLOBUS_USER_HOME}/conf/xpn.conf</destinationUrl>
        </transfer>
    </fileStageIn>
    <fileCleanUp>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/bmp_est_expand</file>
        </deletion>
        <deletion>
            <file>file:///${GLOBUS_USER_HOME}/conf/xpn.conf</file>
        </deletion>
    </fileCleanUp>
</job>
